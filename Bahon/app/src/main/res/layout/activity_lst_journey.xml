<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey2"
    tools:context=".LstJourney">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Semicircular Shape with Text and Back Arrow -->
        <RelativeLayout
            android:id="@+id/top_semi_circle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/semicircle_shape_home"
            android:paddingHorizontal="16dp">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_keyboard_arrow_left_24"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/Recharge_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Last Journey"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Input Container for User Information -->
        <LinearLayout
            android:id="@+id/input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_box_home"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Map Card -->
            <LinearLayout
                android:id="@+id/cmap_card"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="0dp"
                android:background="@drawable/rounded_box"
                android:orientation="vertical"
                android:padding="8dp">

                <org.osmdroid.views.MapView
                    android:id="@+id/osm_map"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/rounded_box"/>
            </LinearLayout>

            <!-- Detail Card -->
            <LinearLayout
                android:id="@+id/cmap_card2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_box"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Start Point Card -->
                <LinearLayout
                    android:id="@+id/start_point_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_box"
                    android:orientation="vertical"
                    android:padding="6dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/start_point_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/baseline_location_on_24"
                        android:contentDescription="Start Point Icon"
                        app:tint="@color/blue" />

                    <TextView
                        android:id="@+id/start_point_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Point: "
                        android:textColor="@color/blue"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:gravity="center" />

                    <TextView
                        android:id="@+id/start_time_text4"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Time: "
                        android:textColor="@color/green"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Current Location Card -->
                <LinearLayout
                    android:id="@+id/current_location_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_box"
                    android:orientation="vertical"
                    android:padding="6dp"
                    android:gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/current_location_icon"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/baseline_location_on_24"
                        android:contentDescription="Current Location Icon"
                        app:tint="@color/blue" />

                    <TextView
                        android:id="@+id/current_location_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Location: "
                        android:textColor="@color/blue"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14sp"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/start_time_text6"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Time: "
                        android:textColor="@color/green"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"
                        android:gravity="center" />
                    <TextView
                        android:id="@+id/start_time_text7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance: , Fare: "
                        android:textColor="@color/green"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!-- Bottom Rectangle for Design -->
    <View
        android:id="@+id/bottom_rectangle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_half_rectangle_factivity" />
</FrameLayout>
