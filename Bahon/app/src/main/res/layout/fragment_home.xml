<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey2"
    tools:context=".HomeFragment">

    <!-- Semicircle with Greeting Text -->

    <!-- Main Content Area -->
    <RelativeLayout
        android:id="@+id/top_circle"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@drawable/semicircle_shape_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Greeting Text -->
        <TextView
            android:id="@+id/greeting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:text="Hello, Shakib! \nWelcome to Bahon"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_bold"
            android:textStyle="bold" />


        <!-- Search Bar and Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/greeting_text"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <EditText
                android:id="@+id/search_box"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/rounded_box"
                android:hint="Search"
                android:fontFamily="@font/roboto_regular"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:paddingLeft="15dp"
                android:textColor="@color/black"
                android:textColorHint="@color/grey" />

            <ImageView
                android:id="@+id/search_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/baseline_search_24"
                android:contentDescription="Search Icon"
                android:backgroundTint="@color/light_grey"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/baseline_notifications_24"
                android:contentDescription="Notification Icon"
                android:padding="8dp"
                android:backgroundTint="@color/light_grey"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/input_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@drawable/rounded_box_home"
        app:layout_constraintTop_toBottomOf="@id/top_circle"
        android:layout_marginTop="16dp"

        android:layout_marginHorizontal="10dp">

        <!-- Spending Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_box"
            android:paddingLeft="16dp"
            android:paddingTop="6dp"
            android:paddingBottom="16dp"
            android:orientation="vertical"
            android:backgroundTint="@color/white"
            android:layout_marginBottom="8dp">

            <!-- Today Spend Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today Spend"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="center_horizontal" />

            <!-- TK 150 Text -->
            <TextView
                android:id="@+id/totalspend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="৳ 150"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="2dp"
                android:layout_gravity="center_horizontal" />

            <!-- Horizontal Line -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"
                android:layout_marginVertical="8dp" />

            <!-- Last 24 Hours Journey Text -->
            <TextView
                android:id="@+id/totalJourneyin24h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 Journeys in Last 24 Hours"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_gravity="start" />
        </LinearLayout>


        <!-- Wallet Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_box"
            android:backgroundTint="@color/white"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="16dp"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <!-- Label Text -->
            <TextView
                android:id="@+id/wbbalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet Balance"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:fontFamily="@font/roboto_bold"
                android:layout_gravity="start" />

            <!-- Horizontal Layout for Amount and Button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="0dp">

                <!-- Amount TextView -->
                <TextView
                    android:id="@+id/balance"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="৳ 150"
                    android:paddingLeft="5dp"
                    android:textColor="@color/blue"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_weight="1"
                    android:layout_marginTop="0dp" />

                <!-- View Details Button -->
                <Button
                    android:id="@+id/recharge_now_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue"
                    android:text="View Details"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_gravity="end" />


            </LinearLayout>
        </LinearLayout>

        <!-- Current Journey Card -->
        <LinearLayout
            android:id="@+id/currentJourneyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_box"
            android:backgroundTint="@color/white"
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <!-- Title -->
            <TextView
                android:id="@+id/current_journey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Journey"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:paddingLeft="10dp"
                android:textStyle="bold" />

            <!-- Location Icons and Labels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <!-- Start Location Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Start Location Icon -->
                    <ImageView
                        android:id="@+id/start_point_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/baseline_location_on_24"
                        android:contentDescription="Start Point Icon" />

                    <!-- Start Point Text -->
                    <TextView
                        android:id="@+id/start_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start Point: ..."
                        android:textColor="@color/grey"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <!-- End Location Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- End Location Icon -->
                    <ImageView
                        android:id="@+id/end_point_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/baseline_location_on_24"
                        android:contentDescription="End Point Icon" />

                    <!-- End Point Text -->
                    <TextView
                        android:id="@+id/end_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Location: ...."
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Divider Line -->

            <!-- Last Updated Timestamp -->
            <TextView
                android:id="@+id/last_updated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You are not currently onboard"
                android:textColor="@color/grey"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:layout_gravity="left"
                android:paddingLeft="20dp"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

        <!-- Buttons Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_box"
            android:padding="16dp"
            android:backgroundTint="@color/white"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <!-- Top Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lost your card? Generate QR code to Pay"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_regular"
                android:layout_gravity="start" />

            <!-- Horizontal Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/grey"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Button Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/generate_qr_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue"
                    android:text="Generate QR Code"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/calculate_fare_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue"
                    android:text="Calculate Fare"
                    android:textColor="@color/white"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>



        <!-- Last Journey Card -->

        <LinearLayout
            android:id="@+id/lastJourneyCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_box"
            android:backgroundTint="@color/white"
            android:padding="8dp"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

            <!-- Title -->
            <TextView
                android:id="@+id/last_journey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Journey"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:paddingLeft="10dp"/>

            <!-- Location Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <!-- Start Location Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- Start Location Icon -->
                    <ImageView
                        android:id="@+id/last_start_point_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/baseline_location_on_24"
                        android:contentDescription="Start Point Icon" />

                    <!-- Start Point Text -->
                    <TextView
                        android:id="@+id/start_point_last"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start: Rampura"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

                <!-- End Location Section -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <!-- End Location Icon -->
                    <ImageView
                        android:id="@+id/last_end_point_icon"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/baseline_location_on_24"
                        android:contentDescription="End Point Icon" />

                    <!-- End Point Text -->
                    <TextView
                        android:id="@+id/end_point_last"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End: Gulshan"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/grey"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp"/>

                    <!-- Fare Amount -->

                </LinearLayout>
            </LinearLayout>


            <!-- Last Updated Timestamp -->
            <TextView
                android:id="@+id/time_fare_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16 Hours ago. Fare ৳ 50."
                android:textColor="@color/grey"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:paddingLeft="20dp"
                android:layout_gravity="start"
                android:layout_marginBottom="4dp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
