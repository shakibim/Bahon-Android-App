<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey2"
    tools:context=".QrCode">

    <!-- Main Vertical Layout to Stack Elements Vertically -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Semicircular Shape with Text and Back Arrow -->
        <RelativeLayout
            android:id="@+id/top_semi_circle"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/semicircle_shape_home">

            <!-- Back Arrow SVG -->

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/baseline_keyboard_arrow_left_24"
                app:tint="@color/white" />

            <!-- Generate QR Code Text -->
            <TextView
                android:id="@+id/generate_qr_code_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Generate QR Code"
                android:textSize="22sp"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Input Container with QR Code -->
        <LinearLayout
            android:id="@+id/input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_box_home"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:id="@+id/profileCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:background="@drawable/rounded_box"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">
            <!-- QR Code Image -->
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="4dp"
                    android:gravity="center_horizontal">

                    <!-- QR Code Image -->
                    <ImageView
                        android:id="@+id/qr_code_image"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_gravity="center"

                         />

                    <!-- Description TextView -->
                    <TextView
                        android:id="@+id/qr_code_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="This QR code serves as a secure and convenient method for making payments. If you've lost your card, simply scan this QR code with a compatible device to access your account and complete your transaction quickly."
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/black"
                        android:textAlignment="textStart" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Semicircular Shape Fixed at the Bottom -->
    <View
        android:id="@+id/bottom_rectangle"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_half_rectangle_factivity" />

</FrameLayout>




